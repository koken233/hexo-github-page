#page-tags
  .tag-cloud-title
    text-align: center
    padding: 10px 0
  .tag-cloud-tags
      .tag-list-item
        display:inline-block
        position:relative
        a
          display:inline-block
          color:#fff
          width:100px
          height:100px
          line-height:100px
          text-decoration: none
          background-color:#555
          margin-right:10px
          margin-bottom:10px
          text-align:center
          overflow:hidden
          &:hover
            text-decoration: underline
            color: #258fb8
        .tag-list-count
          position:absolute
          top: 5px
          right: 15px